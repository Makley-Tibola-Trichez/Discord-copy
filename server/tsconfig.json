{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "Bundler",
    "noImplicitAny": true,

    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": false,
    "strictNullChecks": true,
    "useDefineForClassFields": true
  },
  "include": ["./src/**/*"]
}
